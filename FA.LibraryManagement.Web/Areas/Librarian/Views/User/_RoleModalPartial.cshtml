@model FA.LibraryManagement.Common.ViewModels.UserVM
@{
    Layout = null;
}
<div class="container text-md-start text-start">
    <div id="userId" data-id="@Model.Id"></div>
    <div class="row">
        <div class="col-md-4">
            <label for="first-name-horizontal-icon">User Name</label>
        </div>
        <div class="col-md-8 form-group">
            @Model.UserName
        </div>
    </div>
    <div class="row mt-3 align-items-baseline">
        <div class="col-md-4">
            <label for="first-name-horizontal-icon">Name</label>
        </div>
        <div class="col-md-8 form-group">
            <img src="@Model.ImageUrl" class="rounded-circle" style="width: 40px; height: 40px;">
            @Model.FullName
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-md-4">
            <label for="password-horizontal-icon">Status</label>
        </div>
        <div class="col-md-8 form-group">
            <span class="badge @(Model.LockoutEnabled ? "bg-danger" : "bg-success")">
                @(Model.LockoutEnabled ? "Locked" : "Unlocked")
            </span>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-md-4">
            <label for="email-horizontal-icon">Email</label>
        </div>
        <div class="col-md-8">
            @Model.Email
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-md-4">
            <label for="contact-info-horizontal-icon">Mobile</label>
        </div>
        <div class="col-md-8">
            @Model.PhoneNumber
        </div>
    </div> 
    <div class="row mt-3">
        <div class="col-md-4">
            <label for="password-horizontal-icon">Role</label>
        </div>
        <div class="col-md-6 form-group">
            <select class="choices form-control form-control-xl" id="role-select" asp-items="Model.Roles" asp-for="RoleId"></select>
        </div>
    </div>
</div>