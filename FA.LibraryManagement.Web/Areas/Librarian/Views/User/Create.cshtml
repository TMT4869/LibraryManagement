@model FA.LibraryManagement.Common.ViewModels.UserCreateVM

@{
    ViewData["Title"] = "Create User";
    ViewData["HeadingTitle"] = "User Management";
    ViewData["HeadingSubTitle"] = "Create New User";
    ViewData["UM"] = "active";
    ViewData["user"] = "active";
}

<div class="card">
    <div class="card-body">
        <form id="registerForm" asp-controller="User" asp-action="Create" method="post">
            <div class="form-group position-relative has-icon-left mb-4">
                <input asp-for="FirstName" type="text" aria-required="true" class="form-control form-control-xl" placeholder="First Name">
                <div class="form-control-icon">
                    <i class="bi bi-emoji-smile"></i>
                </div>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group position-relative has-icon-left mb-4">
                <input asp-for="LastName" type="text" aria-required="true" class="form-control form-control-xl" placeholder="Last Name">
                <div class="form-control-icon">
                    <i class="bi bi-emoji-smile-upside-down"></i>
                </div>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group position-relative has-icon-left mb-4">
                <input asp-for="BirthDate" type="date" aria-required="true" class="form-control form-control-xl" placeholder="Date of Birth">
                <div class="form-control-icon">
                    <i class="bi bi-calendar-check"></i>
                </div>
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group position-relative has-icon-left mb-4">
                <select asp-for="Gender" class="form-control form-control-xl">
                    <option disabled value="">Select Gender</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="Other">Do not want to answer</option>
                </select>
                <div class="form-control-icon">
                    <i class="bi bi-gender-trans"></i>
                </div>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group position-relative has-icon-left mb-4">
                <input asp-for="Email" type="text" aria-required="true" class="form-control form-control-xl" placeholder="Email">
                <div class="form-control-icon">
                    <i class="bi bi-envelope"></i>
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group position-relative has-icon-left mb-4">
                <input asp-for="PhoneNumber" type="text" aria-required="true" class="form-control form-control-xl" placeholder="Phone">
                <div class="form-control-icon">
                    <i class="bi bi-phone"></i>
                </div>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group position-relative has-icon-left mb-4">
                <input asp-for="UserName" type="text" aria-required="true" class="form-control form-control-xl" placeholder="Username">
                <div class="form-control-icon">
                    <i class="bi bi-person"></i>
                </div>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group position-relative has-icon-left mb-4">
                <input asp-for="Password" type="password" aria-required="true" class="form-control form-control-xl" placeholder="Password">
                <div class="form-control-icon">
                    <i class="bi bi-shield-lock"></i>
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <button id="registerSubmit" type="submit" class="btn btn-primary btn-block btn-lg shadow-lg mt-3">Create</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
    <script src="~/js/librarian/user/create.js"></script>
}