@inject SignInManager<User> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}
<li class="sidebar-item has-sub @ManageNavPages.ParentNavClass(ViewContext)">
    <a href="#" class='sidebar-link'>
        <i class="bi bi-person-circle"></i>
        <span>Account</span>
    </a>

    <ul class="submenu nav flex-column">

        <li class="submenu-item nav-item @ManageNavPages.IndexNavClass(ViewContext)">
            <a class="nav-link" id="profile" asp-area="Identity" asp-page="/Account/Manage/Index">Profile</a>
        </li>

        <li class="submenu-item nav-item @ManageNavPages.EmailNavClass(ViewContext)">
            <a class="nav-link" id="email" asp-area="Identity" asp-page="/Account/Manage/Email">Email</a>
        </li>

        <li class="submenu-item nav-item @ManageNavPages.ChangePasswordNavClass(ViewContext)">
            <a class="nav-link" asp-area="Identity" id="change-password" asp-page="/Account/Manage/ChangePassword">Password</a>
        </li>

        <li class="submenu-item nav-item @ManageNavPages.PersonalDataNavClass(ViewContext)">
            <a class="nav-link" asp-area="Identity" id="personal-data" asp-page="/Account/Manage/PersonalData">Personal data</a>
        </li>
    </ul>
</li>
