@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["SubTitle"] = "A page where users can change profile information";
    ViewData["ActivePage"] = ManageNavPages.Index;
    ViewData["ActiveParentNav"] = ManageNavPages.ParentNav;
}

<partial name="_StatusMessage" for="StatusMessage"/>
<div class="row">
    <div class="col-12 col-lg-4">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-center align-items-center flex-column">
                    <div class="avatar avatar-2xl">
                        <img src="@Model.UserImage" alt="Avatar">
                    </div>

                    <h3 class="mt-3">@Model.Input.FirstName @Model.Input.LastName</h3>
                    <p class="text-small">@Model.UserRole</p>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 col-lg-8">
        <div class="card">
            <div class="card-body">
                <form id="profile-form" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-group">
                        <label asp-for="Username" class="form-label"></label>
                        <input asp-for="Username" type="text" class="form-control" placeholder="Your Username" disabled>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.ImageFile" class="form-label"></label>
                        <input asp-for="Input.ImageFile" type="file" class="form-control" id="formFile" accept="image/*">
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.FirstName" for="name" class="form-label"></label>
                        <input asp-for="Input.FirstName" type="text" class="form-control" placeholder="Your First Name">
                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.LastName" class="form-label"></label>
                        <input asp-for="Input.LastName" type="text" class="form-control" placeholder="Your Last Name">
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.BirthDate" class="form-label"></label>
                        <input asp-for="Input.BirthDate" type="date" class="form-control" placeholder="Your Date of Birth">
                        <span asp-validation-for="Input.BirthDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.PhoneNumber" class="form-label"></label>
                        <input asp-for="Input.PhoneNumber" type="text" class="form-control" placeholder="Your Phone">
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Gender" class="form-label"></label>
                        <select asp-for="Input.Gender" class="form-control">
                            <option disabled value="">Select Gender</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                            <option value="Other">Do not want to answer</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <button id="update-profile-button" type="submit" class="btn btn-primary">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery/jquery.min.js"></script>
<partial name="_ValidationScriptsPartial" />