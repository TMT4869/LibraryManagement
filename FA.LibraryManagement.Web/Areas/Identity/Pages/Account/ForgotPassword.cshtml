@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="icon" type="image/x-icon" href="favicon.ico">
    <link rel="icon" type="image/png" href="~/static/images/logo/favicon.png">
    @await Html.PartialAsync("_AuthPartial")
</head>

<body>
<script src="~/static/js/initTheme.js"></script>
<div id="auth">

    <div class="row h-100">
        <div class="col-lg-5 col-12">
            <div id="auth-left">
                <div class="auth-logo">
                    <a asp-area="Member" asp-controller="Home" asp-action="Index">
                        <img src="~/static/images/logo/logo.svg" alt="Logo">
                    </a>
                </div>
                <h1 class="auth-title">Forgot Password</h1>
                <p class="auth-subtitle mb-5">
                    Input your email and we will send you reset password link.<br/>
                    You need to verify your email to use this feature.
                </p>

                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-group position-relative has-icon-left mb-4">
                        <input asp-for="Input.Email" type="email" aria-required="true" class="form-control form-control-xl" placeholder="Email">
                        <div class="form-control-icon">
                            <i class="bi bi-envelope"></i>
                        </div>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block btn-lg shadow-lg mt-5">Send</button>
                </form>
                <div class="text-center mt-5 text-lg fs-4">
                    <p class="text-gray-600">
                        Remember your account? <a asp-page="./Login" class="font-bold">Log in</a>.
                    </p>
                </div>
            </div>
        </div>
        <div class="col-lg-7 d-none d-lg-block">
            <div id="auth-right">
            </div>
        </div>
    </div>

</div>
</body>

</html>
<script src="~/lib/jquery/jquery.min.js"></script>
<partial name="_ValidationScriptsPartial"/>