@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="icon" type="image/x-icon" href="favicon.ico">
    <link rel="icon" type="image/png" href="~/static/images/logo/favicon.png">
    @await Html.PartialAsync("_AuthPartial")
</head>

<body>
    <script src="~/static/js/initTheme.js"></script>
    <div id="auth">

        <div class="row h-100">
            <div class="col-lg-5 col-12">
                <div id="auth-left">
                    <div class="auth-logo">
                        <a asp-area="Member" asp-controller="Home" asp-action="Index">
                            <img src="~/static/images/logo/logo.svg" alt="Logo">
                        </a>
                    </div>
                    <h1 class="auth-title">Log in.</h1>
                    <p class="auth-subtitle mb-5">Log in with your data that you entered during registration.</p>

                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="form-group position-relative has-icon-left mb-4">
                            <input asp-for="Input.UserName" type="text" aria-required="true" class="form-control form-control-xl" placeholder="Username">
                            <div class="form-control-icon">
                                <i class="bi bi-person"></i>
                            </div>
                            <span asp-validation-for="Input.UserName" class="text-danger"></span>
                        </div>
                        <div class="form-group position-relative has-icon-left mb-4">
                            <input asp-for="Input.Password" type="password" aria-required="true" class="form-control form-control-xl" placeholder="Password">
                            <div class="form-control-icon">
                                <i class="bi bi-shield-lock"></i>
                            </div>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-check form-check-lg d-flex align-items-end">
                            <input asp-for="Input.RememberMe" class="form-check-input me-2" type="checkbox" id="flexCheckDefault">
                            <label class="form-check-label text-gray-600" for="flexCheckDefault">
                                Keep me logged in
                            </label>
                        </div>
                        <button id="login-submit" type="submit" class="btn btn-primary btn-block btn-lg shadow-lg mt-5">Log in</button>
                    </form>
                    <div class="text-center mt-5 text-lg fs-4">
                        <p class="text-gray-600">
                            Don't have an account?
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="font-bold">
                                Sign up</a>.
                        </p>
                        <p><a id="forgot-password" asp-page="./ForgotPassword" class="font-bold">Forgot password?</a></p>
                    </div>
                </div>
            </div>
            <div class="col-lg-7 d-none d-lg-block">
                <div id="auth-right">
                </div>
            </div>
        </div>
    </div>
</body>

</html>
<script src="~/lib/jquery/jquery.min.js"></script>
<partial name="_ValidationScriptsPartial" />
