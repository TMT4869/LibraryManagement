@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="icon" type="image/x-icon" href="favicon.ico">
    <link rel="icon" type="image/png" href="~/static/images/logo/favicon.png">
    @await Html.PartialAsync("_AuthPartial")
</head>

<body>
    <script src="~/static/js/initTheme.js"></script>
    <div id="auth">

        <div class="row h-100">
            <div class="col-lg-5 col-12">
                <div id="auth-left">
                    <div class="auth-logo">
                        <a asp-area="Member" asp-controller="Home" asp-action="Index">
                            <img src="~/static/images/logo/logo.svg" alt="Logo">
                        </a>
                    </div>
                    <h1 class="auth-title">Sign Up</h1>
                    <p class="auth-subtitle mb-5">Input your data to register to our website.</p>

                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="form-group position-relative has-icon-left mb-4">
                            <input asp-for="Input.FirstName" type="text" aria-required="true" class="form-control form-control-xl" placeholder="First Name">
                            <div class="form-control-icon">
                                <i class="bi bi-emoji-smile"></i>
                            </div>
                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group position-relative has-icon-left mb-4">
                            <input asp-for="Input.LastName" type="text" aria-required="true" class="form-control form-control-xl" placeholder="Last Name">
                            <div class="form-control-icon">
                                <i class="bi bi-emoji-smile-upside-down"></i>
                            </div>
                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
                        </div>
                        <div class="form-group position-relative has-icon-left mb-4">
                            <input asp-for="Input.BirthDate" type="date" aria-required="true" class="form-control form-control-xl" placeholder="Date of Birth">
                            <div class="form-control-icon">
                                <i class="bi bi-calendar-check"></i>
                            </div>
                            <span asp-validation-for="Input.BirthDate" class="text-danger"></span>
                        </div>
                        <div class="form-group position-relative has-icon-left mb-4">
                            <select asp-for="Input.Gender" class="form-control form-control-xl">
                                <option disabled value="">Select Gender</option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                                <option value="Other">Do not want to answer</option>
                            </select>
                            <div class="form-control-icon">
                                <i class="bi bi-gender-trans"></i>
                            </div>
                            <span asp-validation-for="Input.Gender" class="text-danger"></span>
                        </div>
                        <div class="form-group position-relative has-icon-left mb-4">
                            <input asp-for="Input.Email" type="text" aria-required="true" class="form-control form-control-xl" placeholder="Email">
                            <div class="form-control-icon">
                                <i class="bi bi-envelope"></i>
                            </div>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group position-relative has-icon-left mb-4">
                            <input asp-for="Input.PhoneNumber" type="text" aria-required="true" class="form-control form-control-xl" placeholder="Phone">
                            <div class="form-control-icon">
                                <i class="bi bi-phone"></i>
                            </div>
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group position-relative has-icon-left mb-4">
                            <input asp-for="Input.UserName" type="text" aria-required="true" class="form-control form-control-xl" placeholder="Username">
                            <div class="form-control-icon">
                                <i class="bi bi-person"></i>
                            </div>
                            <span asp-validation-for="Input.UserName" class="text-danger"></span>
                        </div>
                        <div class="form-group position-relative has-icon-left mb-4">
                            <input asp-for="Input.Password" type="password" aria-required="true" class="form-control form-control-xl" placeholder="Password">
                            <div class="form-control-icon">
                                <i class="bi bi-shield-lock"></i>
                            </div>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group position-relative has-icon-left mb-4">
                            <input asp-for="Input.ConfirmPassword" type="password" aria-required="true" class="form-control form-control-xl" placeholder="Confirm Password">
                            <div class="form-control-icon">
                                <i class="bi bi-shield-lock"></i>
                            </div>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <button id="registerSubmit" type="submit" class="btn btn-primary btn-block btn-lg shadow-lg mt-5">Sign Up</button>
                    </form>
                    <div class="text-center mt-5 text-lg fs-4">
                        <p class="text-gray-600">
                            Already have an account?
                            <a asp-page="./Login" class="font-bold">
                                Log in</a>.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-lg-7 d-none d-lg-block">
                <div id="auth-right">
                </div>
            </div>
        </div>

    </div>
</body>

</html>
<script src="~/lib/jquery/jquery.min.js"></script>
<partial name="_ValidationScriptsPartial" />
